@{
    ViewData["Title"] = "About Us";
}
<style>
    div {
        align-content: center;
        margin: 0 auto;
    }

    html {
        box-sizing: border-box;
    }

    img {
        height: 300px;
    }
    .JP{
        object-fit:cover;
        object-position: 0 70%;
    }

    .Karan {
        object-fit: cover;
        object-position: 0 25%;
    }

    .Tony {
        object-fit: cover;
        object-position: 0 50%;
    }

    .Saif {
        object-fit: cover;
        object-position: 0 15%;
    }

    .row{
        display: flex;
        flex-flow: row wrap;
        align-items: flex-start;
        align-content: flex-start;

    }

    .column {
        display: flex;
        flex-flow: column wrap;
        align-items: flex-start;
       align-content: flex-start;
       overflow-y:hidden;
       float: none;
        width: 40%;
        min-height:75%;
        margin-bottom: 16px;
        padding: 0 8px;
    }

    .card {
        display: flex;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        margin: 8px;
        color: black;
        background-color: white;
    }

    .card-title {
        font-weight: bold;
    }

    .about-section {
        padding: 50px;
        text-align: center;
        background-color: #474e5d;
        color: white;
    }

</style>
