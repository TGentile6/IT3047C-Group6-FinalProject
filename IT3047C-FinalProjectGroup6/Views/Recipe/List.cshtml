@{
    ViewData["Title"] = "Recipe List";
}


<div>
    <div class="mt-4 p-5 bg-secondary text-white rounded text-center mb-4">
        <h1 class="font-weight-bold">Recipes</h1>
        <p>Take a look at some of the recipes we love, and even add your own if you'd like!</p>
    </div>
    <div class="text-center">
        <a asp-action="Add" class="btn btn-outline-success" style="font-size: 24px;">Add New Recipe</a>
    </div>
    <div class="mt-4" id="test">
        @{
            foreach(var recipe in Model){
                            <div class="card mb-4 shadow" >
                                <div class="row g-0">
                                    <div class="col-md-4">
                                        <img src="@recipe.Image" class="img-fluid rounded-start" style="object-fit: cover; height: 100%;" alt="...">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h3 class="card-title mb-3">@recipe.Name</h3>
                                            <h5 class="card-title">Description:</h5>
                                            <p class="card-text">@recipe.Description</p>
                                            <h5 class="card-title">Ingredients:</h5>
                                            <p class="card-text">@recipe.Ingredients</p>
                                            <h5 class="card-title">Time Estimate:</h5>
                                            <p class="card-text">@recipe.TimeEstimate minutes</p>
                                            <p class="card-text"><small class="text-muted">Added by @recipe.Author</small></p>
                                    <a asp-controller="Recipe" asp-action="Delete" asp-route-id="@recipe.id" class="link-danger text-end">Delete Recipe</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
            }
        }
    </div>
</div>
