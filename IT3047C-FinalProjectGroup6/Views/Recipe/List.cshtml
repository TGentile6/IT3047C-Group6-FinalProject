@{
    ViewData["Title"] = "List";
}

<h1>Recipe List</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr><th>Name</th><th>Description</th><th>Ingredients</th><th>Time Estimate</th><th>Author</th></tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.Name</td>
                <td>@recipe.Description</td>
                <td>@recipe.Ingredients</td>
                <td>@recipe.TimeEstimate mins</td>
                <td>@recipe.Author</td>
            </tr>
        }
    </tbody>
</table>