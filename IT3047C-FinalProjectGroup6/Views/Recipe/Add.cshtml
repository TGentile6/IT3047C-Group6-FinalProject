@model Recipe
@{
    ViewData["Title"] = "Add Recipe";
}

<style>
    input {
        margin-bottom: 15px;
    }
</style>

<h1>Add Recipe</h1>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Ingredients">Ingredients</label>
        <input asp-for="Ingredients" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="TimeEstimate">Time Estimate (minutes)</label>
        <input asp-for="TimeEstimate" class="form-control" type="number">
    </div>

    <div class="form-group">
        <label asp-for="Author">Your Name</label>
        <input asp-for="Author" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Image">Image Url</label>
        <input asp-for="Image" class="form-control">
    </div>

    <input type="hidden" asp-for="id" value="0" />

    <button type="submit" class="btn btn-outline-success mt-2">Add</button>
    <a asp-controller="Recipe" asp-action="List" class="btn btn-outline-secondary mt-2">Cancel</a>
</form>